AC_INIT(fuse.c)

dnl Use automake to produce `Makefile.in'
AM_INIT_AUTOMAKE(fuse, 0.1.3)

dnl Checks for programs.
AC_PROG_CC

dnl Checks for packages
AC_ARG_WITH(x,[  --with-x                The X Window System],,with_x="yes")

if test "$with_x" = "no"; then
  AC_DEFINE(X_DISPLAY_MISSING)
  use_x="no";
  with_x="yes";
fi

dnl Checks for libraries.
AC_PATH_XTRA
CFLAGS="$CFLAGS $X_CFLAGS";
LDFLAGS="$LDFLAGS $X_LIBS";
LIBS="$LIBS $X_PRE_LIBS -lX11 $X_EXTRA_LIBS";

AC_CHECK_LIB(alleg, allegro_init, AC_DEFINE(HAVE_LIBALLEG) )

if test "$ac_cv_lib_alleg_allegro_init" = "yes" -a "$use_x" = "no"; then
  LIBS="$LIBS -lallegwip";
else
  LIBS="$LIBS -lalleg";
fi

AC_CHECK_LIB(m, sin)

dnl Checks for header files.
AC_HEADER_STDC
AC_CHECK_HEADERS(unistd.h)

dnl Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST

dnl Checks for library functions.
AC_CHECK_FUNCS(setitimer)

AC_SUBST(X_CFLAGS)
AC_SUBST(X_LIBS)
AC_SUBST(X_EXTRA_LIBS)
AC_SUBST(X_PRE_LIBS)

CFLAGS="$CFLAGS -Wall"

AC_OUTPUT(Makefile)
